{
  "extends": ["airbnb", "plugin:jest/recommended"],
  "globals": {
    "document": true,
    "foo": true,
    "window": true,
    "WebSocket": true,
    "URL": true,
    "navigator": true,
    "fetch": true
  },
  "plugins": ["jest"],
  "rules": {
    "semi": [2, "never"],
    "padded-blocks": 0,
    "strict": 0,
    "arrow-parens": [2, "as-needed"],
    "no-await-in-loop": 0,
    "guard-for-in": 0,
    "no-restricted-syntax": 0,
    "no-use-before-define": 0,
    "object-curly-newline": 0
  },
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true,
      "modules": true
    }
  }
}
